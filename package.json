{
  "name": "dovetail-counts-lambda",
  "version": "1.0.0",
  "engines": {
    "node": ">= 22.0.0"
  },
  "description": "Count which bytes of a multi-segment mp3 were downloaded",
  "main": "index.js",
  "scripts": {
    "build": "yarn run build-sync && yarn run build-prune && yarn run build-zip",
    "build-sync": "rsync -crl --delete --exclude-from .lambdaignore . build",
    "build-prune": "cd build && yarn --production",
    "build-zip": "rm -f build.zip && cd build && zip -rq ../build.zip .",
    "lint": "biome check",
    "lint-ci": "biome ci",
    "lint-fix": "biome check --write --unsafe",
    "test": "NODE_OPTIONS='--experimental-vm-modules --no-warnings=ExperimentalWarning' jest",
    "watch": "NODE_OPTIONS='--experimental-vm-modules --no-warnings=ExperimentalWarning' jest --watch"
  },
  "repository": {
    "type": "git",
    "url": "git@github.com:PRX/dovetail-counts-lambda.git"
  },
  "keywords": [
    "lambda",
    "dovetail",
    "bytes",
    "counts"
  ],
  "author": "ryan cavis <ryan@prx.org>",
  "license": "AGPL-3.0",
  "bugs": {
    "url": "https://github.com/PRX/dovetail-counts-lambda/issues"
  },
  "homepage": "https://github.com/PRX/dovetail-counts-lambda#readme",
  "dependencies": {
    "ioredis": "^4.0.0",
    "lambda-log": "^3.1.0"
  },
  "devDependencies": {
    "targz": "^1.0.1",
    "@aws-sdk/client-dynamodb": "^3.891.0",
    "@aws-sdk/client-kinesis": "^3.891.0",
    "@aws-sdk/client-sts": "^3.891.0",
    "@biomejs/biome": "2.2.4",
    "aws-sdk-client-mock": "^4.1.0",
    "aws-sdk-client-mock-jest": "^4.1.0",
    "dotenv": "^17.2.2",
    "jest": "^30.1.3",
    "nock": "^14.0.10"
  },
  "jest": {
    "setupFiles": ["dotenv/config"],
    "restoreMocks": true,
    "moduleNameMapper": {
      "^aws-sdk-client-mock-jest$": "<rootDir>/node_modules/aws-sdk-client-mock-jest/dist/cjs/jest.js"
    },
    "testPathIgnorePatterns": [
      "/node_modules/",
      "integration"
    ]
  }
}
